generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mission {
  id Int @id @default(autoincrement())

  chapter     String
  title       String
  description String

  characters Character[]
  locations  Location[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Character {
  id Int @id @default(autoincrement())

  name String @unique
  role String

  mission   Mission? @relation(fields: [missionId], references: [id])
  missionId Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Location {
  id Int @id @default(autoincrement())

  name    String @unique
  chapter String

  mission   Mission? @relation(fields: [missionId], references: [id])
  missionId Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
