generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mission {
  id          Int    @id @default(autoincrement())
  chapter     String
  title       String
  description String
}

model Character {
  id      Int    @id @default(autoincrement())
  name    String @unique
  role    String
  mission String
}

model Location {
  id      Int    @id @default(autoincrement())
  name    String @unique
  chapter String
  mission String
}
